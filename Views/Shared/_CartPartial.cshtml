@{
    //取得當前購物車內容
    var currentCart = Carts.Models.CartOperation.GetCurrentCart();
}

<a id="CartDropDown" class="dropdown-toggle" data-toggle="dropdown">
    @String.Format("共{0}元 ({1})",currentCart.TotalAmount,currentCart.Count)
    <span class="caret"></span>
</a>

<ul class="dropdown-menu" role="menu" aria-labelledby="CartDropDown">
    @if (currentCart.Count > 0)
    {
        foreach (var data in currentCart)
        {
            //<li><a>@data.Name<span>@data.Price 元 X @data.Quantity </span></a></li>
            <li class="col-xs-12">
                <span class="col-xs-9"> @data.Name @data.Price X @data.Quantity</span>
                <span class="btn btn-danger col-xs-3" onclick="RemoveFromCart('@data.Id')"> X </span>
            </li>
        }
        <li class="divider"></li>
        <li>
            <div id="CartButtons" class="col-xs-12">
                <a class="btn btn-success text-center col-xs-5" href="#">結帳去</a>
                <a class="btn btn-danger text-center col-xs-5" onclick="ClearCart();">清空</a>
            </div>
        </li>
    }
    else
    {
        <li><a class="btn btn-default text-center" href="#">購物車無任何商品</a></li>
    }

</ul>

